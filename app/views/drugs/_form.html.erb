<%= simple_form_for @drug do |f| %>
  <%= f.input :mnn %>
  <%= f.input :name %>
  <%= f.input :dosage_form,  as: :text%>
  <%= f.input :unit %>
  <%= f.input :packing %>
  <%= f.input :producer %>
  <%= f.association :country, collection: @countries %>

  <%= f.button :submit, 'Сохранить', class: 'btn btn-primary' %> или <%= link_to 'вернуться', drugs_path%>
<% end %>
